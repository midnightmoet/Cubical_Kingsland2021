<h1>{{name}}</h1>
<img class="cube" src="{{imgURL}}">

<div class="details">
    <p><span>Description:</span> {{description}}</p>
    <p><span>Difficulty level:</span>{{difficulty}}</p>
    <div class="buttons">
        <a class="btn" href="/">Back</a>
        {{#if creator}}
        <a class="btn" href="/cube/attach/{{id}}">Attach</a>
        <a class="btn" href="/cube/edit/{{id}}">Edit</a>
        <a class="btn" href="/cube/delete/{{id}}">Delete</a>
        {{/if}}

    </div>


</div>